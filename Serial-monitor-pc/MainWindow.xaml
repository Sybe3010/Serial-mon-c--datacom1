<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Serial_monitor_pc"
        xmlns:Collections="clr-namespace:System.Collections;assembly=System.Runtime" x:Class="Serial_monitor_pc.MainWindow"
        mc:Ignorable="d"
        Title="Super slimme seriele monitor" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="scanButton" Content="Scan" Width="75" Margin="5,0" Click="ScanButton_Click"/>
            <Label Content="COM Port:" VerticalAlignment="Center"/>
            <ComboBox x:Name="comPortComboBox" Width="100" Margin="5,0"/>
            <Label Content="Baud Rate:" VerticalAlignment="Center"/>
            <ComboBox x:Name="baudRateComboBox" Width="100" Margin="5,0">
                <ComboBoxItem Content="9600" IsSelected="True"/>
                <ComboBoxItem Content="115200"/>
            </ComboBox>
            <Button x:Name="connectButton" Content="Connect" Width="75" Margin="5,0" Click="ConnectButton_Click"/>
            <Button x:Name="disconnectButton" Content="Disconnect" Width="75" Margin="5,0" Click="DisconnectButton_Click" IsEnabled="False"/>
            <Button x:Name="plotterButton" Content="Plotter" Width="75" Margin="5,0" Click="plotterButton_Click" IsEnabled="False" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="200*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="dataTextBox" Margin="10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True"/>


            <!-- Halve cirkel Progress Bar -->
            <Grid Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50" >
                <Grid.RenderTransform>
                    <RotateTransform Angle="180" CenterX="150" CenterY="150"/>
                </Grid.RenderTransform>
                <!-- Achtergrondboog -->
                <Path Stroke="#444" StrokeThickness="15" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="50,200">
                                <ArcSegment Point="250,200" Size="100,100" SweepDirection="Clockwise"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>

                <!-- Voorgrondboog (voortgang) -->
                <Path Stroke="#4CAF50" StrokeThickness="15" StrokeStartLineCap="Round" StrokeEndLineCap="Round"  x:Name="potProgress">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="50,200">
                                <ArcSegment x:Name="ProgressArc" Point="250,200" Size="100,100" SweepDirection="Clockwise"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                    <Path.StrokeDashArray>314,314</Path.StrokeDashArray>
                </Path>

            </Grid>

        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">
            <ComboBox x:Name="typeData" Margin="5, 0" Width="100">
                <ComboBoxItem Content="Tijd:" IsSelected="True"/>
                <ComboBoxItem Content="Servo:"/>
            </ComboBox>
            <TextBox x:Name="sendTextBox" Width="600" Margin="0,0,5,0"/>
            <Button x:Name="sendButton" Content="Send" Width="50" Click="SendButton_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
