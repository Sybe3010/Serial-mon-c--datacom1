<Window x:Class="Serial_monitor_pc.Plotter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:Serial_monitor_pc"
        Title="Example 2 (WPF)" Height="350" Width="525">
    <Window.DataContext>
        <local:PlotterPoints/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <oxy:PlotView Grid.Row="0" Model="{Binding MyModel}"/>
        <StackPanel  Orientation="Horizontal" Grid.Row="1" Margin="10">
            <CheckBox Content="Potentiometer" Margin="5,0"/>
            <CheckBox Content="Batterij" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>